<div class="column-6 article">
    <div class="column-5 relative">
        <img src="images\{{ article.getId }}.jpg" alt="{{ article.getId }}"/>
    </div>
    <div class="column-7 articleSummary">
        <p>{{ article.getCategory.getNameEn }} / {{ article.getReleaseDate|date("Y.m.d") }}</p>
        <h2 class="titleHeadline">
            <a href="{{ path('article', {'id': article.getId}) }}">{{ article.getTitleEn }}</a>
        </h2>
        <div class="content">
            <p>{{ article.getContentEns[0].getText }}</p>
        </div>
    </div>
</div>