{% extends ('base.html.twig') %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block page_content %}
    <div class="section">
        <p class="section">{% trans %}Recent{% endtrans %}</p>
        {% include 'index/recent.html.twig' with {'article': article} %}
    </div>
    <div class="section">
        <p class="section">{% trans %}All Articles{% endtrans %}</p>
        {% for pair in articles %}
            <div class="row">
                {% for article in pair %}
                    {% include 'index/article.html.twig' with {'article': article} %}
                {% endfor %}
            </div>
        {% endfor %}
    </div>
{% endblock %}