<div class="row article">
    <div class="column-7" style="position: relative;">
        <img src="images/{{ article.getId }}.jpg" alt="{{ article.getId }}" style="width: 100%; height: 360px; object-fit: cover;"/>
    </div>
    <div class="column-5 articleSummary">
        <p>{{ article.getCategoryName }} / {{ article.getReleaseDate|date("Y.m.d") }}</p>
        <h1 class="titleHeadline"><a href="{{ path('article', {'id': article.getId}) }}">{{ article.getTitle }}</a>
        </h1>
        <div class="content">
            <p>{{ article.getContent[0] }}</p>
        </div>
        <button onclick="toArticle({{ article.getId }})">
            {% trans %}READ ARTICLE{% endtrans %} >
        </button>
    </div>
    {% block js %}
        <script>
            function toArticle(articleID) {
                let url = "{{ path('article', {'id': 'article_id'}) }}";
                url = url.replace('article_id', articleID);
                location.href = url;
            }
        </script>
    {% endblock %}
</div>
