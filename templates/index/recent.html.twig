<div class="row article">
    <div class="column-7 relative">
        <img src="images\{{ article.getId }}.jpg" alt="{{ article.getId }}"/>
    </div>
    <div class="column-5 articleSummary">
        <p>{{ article.getCategory.getNameEn }} / {{ article.getReleaseDate|date("Y.m.d") }}</p>
        <h1 class="titleHeadline"><a href="{{ path('article', {'id': article.getId}) }}">{{ article.getTitleEn }}</a>
        </h1>
        <div class="content">
            <p>{{ article.getContentEns[0].getText }}</p>
        </div>
        <a href="{{ path('article', {'id': article.getId}) }}">
            <button type="button">READ ARTICLE ></button>
        </a>
    </div>
</div>